import express from "express";
import { createServer } from "http";
import { Server } from "socket.io";
import path from "path";
import { fileURLToPath } from "url";

const __filename = fileURLToPath(import.meta.url);
const __dirname = path.dirname(__filename);

const app = express();
const httpServer = createServer(app);
const io = new Server(httpServer, {
  cors: { origin: "*" }
});

// نخدم ملفات الواجهة من مجلد public
app.use(express.static(path.join(__dirname, "public")));

io.on("connection", (socket) => {
  console.log("🔌 متصل:", socket.id);

  // أمثلة أحداث:
  socket.on("join-as-host", () => {
    socket.join("hosts");
  });

  socket.on("join-as-player", () => {
    socket.join("players");
  });

  socket.on("host-send-question", (q) => {
    // نرسل السؤال لكل اللاعبين
    io.to("players").emit("new-question", q);
  });

  socket.on("player-answer", (payload) => {
    // نرسل الإجابة للمضيف
    io.to("hosts").emit("player-answered", payload);
  });

  socket.on("disconnect", () => {
    console.log("❌ انفصل:", socket.id);
  });
});

const PORT = process.env.PORT || 3000;
httpServer.listen(PORT, () =>
  console.log(`✅ Server running on http://localhost:${PORT}`)
);
